{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": [
      "node_modules", 
      "dist", 
      "src/simple-server.ts", 
      "src/lambda.ts", 
      "src/gcf.ts", 
      "src/serverless.ts",
      "tests/bulk-operations.test.ts",
      "tests/delete-confirmation.test.ts",
      "tests/reading-progress.test.ts",
      "tests/tags.test.ts",
      "tests/video-features.test.ts"
    ]
  }